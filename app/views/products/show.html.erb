<section>
	<div class="row">
		<div class="large-12 columns">
			<h3><%= @product.name %></h3>

			<% if @product.default_image %>
			  <%= image_tag @product.default_image.path, :width => '200px', :style => "float:right" %>
			<% end %>

			<p><%= @product.short_description %></p>
			<p>
			  <b><%= number_to_currency @product.price %></b>
			  <%= link_to "Agregar", product_path(@product.permalink), :method => :post %>
			</p>

			<%= simple_format @product.description %>

			<%= link_to "Regresar a la lista", root_path, :class => 'button tiny radius' %>
		</div>
	</div>
</section>
<section>
	<div class="row">
		<div class="large-12 columns">
			<h3>Productos relacionados.</h3>
		</div>
	</div>
</section>

